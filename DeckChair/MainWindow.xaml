<Window x:Class="DeckChair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeckChair"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="False">
            <Button DockPanel.Dock="Top" Margin="5" Width="75" Height="30">Add</Button>
        </DockPanel>
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Background="LightSteelBlue">
            
        </Border>
        <Canvas Grid.Column="1" MouseLeftButtonDown="CanvasClick" Background="Transparent">
            <Rectangle Fill="Transparent" Stroke="Black" StrokeDashArray="4,4" Width="100" Height="100" MouseLeftButtonDown="ItemMouseClick"
                Canvas.Top="13" Canvas.Left="10" MouseEnter="ItemMouseEnter" MouseLeave="ItemMouseLeave"/>
            <Rectangle Fill="Gray" Width="100" Height="100" MouseLeftButtonDown="ItemMouseClick"
                Canvas.Top="130" Canvas.Left="10" MouseEnter="ItemMouseEnter" MouseLeave="ItemMouseLeave"/>
        </Canvas>
    </Grid>
</Window>
